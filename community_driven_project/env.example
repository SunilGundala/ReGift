# =============================================================================
# Community-Driven E-Commerce Platform - Environment Configuration
# =============================================================================

# =============================================================================
# Application Settings
# =============================================================================
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:5000

# =============================================================================
# Database Configuration
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/community_platform
MONGODB_URI_TEST=mongodb://localhost:27017/community_platform_test

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=your-refresh-token-secret
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=12

# =============================================================================
# File Upload & Media Storage
# =============================================================================
# Cloudinary (recommended for production)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AWS S3 (alternative)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Local storage (development only)
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760 # 10MB

# =============================================================================
# Email Configuration
# =============================================================================
# Gmail SMTP
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@yourplatform.com

# SendGrid (alternative)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourplatform.com

# =============================================================================
# SMS Configuration (optional)
# =============================================================================
# Twilio
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# External Services
# =============================================================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Facebook OAuth
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# =============================================================================
# Media Processing (Face/Body Blurring)
# =============================================================================
# Google Cloud Vision API
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_PRIVATE_KEY=your-private-key
GOOGLE_CLOUD_CLIENT_EMAIL=your-client-email

# AWS Rekognition (alternative)
AWS_REKOGNITION_REGION=us-east-1

# =============================================================================
# Monitoring & Analytics
# =============================================================================
# Sentry
SENTRY_DSN=your-sentry-dsn

# Google Analytics
GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# Redis (Caching & Sessions)
# =============================================================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# =============================================================================
# Rate Limiting
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# =============================================================================
# Feature Flags
# =============================================================================
ENABLE_EMAIL_VERIFICATION=true
ENABLE_SMS_VERIFICATION=false
ENABLE_GOOGLE_OAUTH=true
ENABLE_FACEBOOK_OAUTH=false
ENABLE_MEDIA_BLURRING=true
ENABLE_REVIEWER_SYSTEM=true

# =============================================================================
# Development Settings
# =============================================================================
DEBUG=true
LOG_LEVEL=debug
ENABLE_SWAGGER=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# Production Settings (override in production)
# =============================================================================
# NODE_ENV=production
# DEBUG=false
# LOG_LEVEL=info
# ENABLE_SWAGGER=false 